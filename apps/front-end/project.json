{
  "name": "front-end",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/front-end/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project front-end --web",
  "targets": {
    "generate-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx orval",
        "cwd": "apps/front-end"
      }
    },
    "ui": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/front-end",
        "color": true
      }
    },
    "shadcn": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx shadcn@latest",
        "cwd": "apps/front-end"
      }
    },
    "msw": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx msw",
        "cwd": "apps/front-end"
      }
    },
    "docker-web-rebuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up -d --no-deps --build web",
        "cwd": "apps/front-end"
      }
    },
    "docker-web-stop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose stop web",
        "cwd": "apps/front-end"
      }
    },
    "docker-up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up -d --build",
        "cwd": "apps/front-end"
      }
    },
    "docker-down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose down",
        "cwd": "apps/front-end"
      }
    },
    "docker-logs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose logs -f",
        "cwd": "apps/front-end"
      }
    }
  }
}
